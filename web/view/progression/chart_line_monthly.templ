package progression

import "github.com/AurelienS/cigare/web/viewmodel"

script setUpChartFlightTimeMonthly(datasets []viewmodel.ChartDataset, id string) {
	const ctx = document.getElementById(id);
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"],
            datasets: datasets.map((ds, index) => ({
                label: ds.Label,
                data: ds.Data,
                backgroundColor: ds.Color,
                borderColor: ds.Color,
                borderWidth: 1,
                cubicInterpolationMode: 'monotone',
                hidden: index > 1,
            }))
        },
        options: {
            responsive: false,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                },
            },
            plugins: {
                legend: {
                    display: true,
                    position: 'left'
                },
            },
            animation: {
                duration: 1000
            }
        }
    });


}

templ ChartLineMontly(datasets []viewmodel.ChartDataset, id string) {
	<canvas class="w-full h-full" id={ id }></canvas>
	@setUpChartFlightTimeMonthly(datasets, id)
}
