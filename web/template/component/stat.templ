package component

import "github.com/AurelienS/cigare/web/template"


templ Stat(view template.StatView) {
	<div class="stat">
		<div class="stat-title text-lg text-secondary">{ view.Title }</div>
		<div class="stat-value text-2xl">{ view.Value }</div>
		<div class="stat-desc">{ view.Description }</div>
	</div>
}
