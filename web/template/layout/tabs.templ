package layout

import "github.com/AurelienS/cigare/web/template/user"
import "github.com/AurelienS/cigare/internal/model"

templ Tabs(currentUser model.User) {
	<div>
		@user.ProfilButton(currentUser)
		<div id="tabContainer" class="flex border-b justify-center">
			<button
				class="h-[918px]"
				hx-get="/dashboard"
				hx-target="#tabContent"
				hx-swap="innerHTML"
				hx-trigger="click"
			>
				Dashboard
			</button>
			<button
				class="tabButton inline-block border-l border-t border-r rounded-t py-2 px-4 text-blue-700 hover:text-blue-800 bg-white hover:bg-gray-100"
				hx-get="/logbook"
				hx-target="#tabContent"
				hx-swap="innerHTML"
			>Logbook</button>
		</div>
		<div id="tabContent">
			<!-- Tab content will be loaded here -->
		</div>
	</div>
}
